.start-section
  // background-image: url('../images/start-section-bg.jpg')
  // background-repeat: no-repeat
  // background-position: center
  // background-size: cover
  background-color #2B2724

  &__container
    position relative
    z-index 1
    padding 20px 0
    +above($breakpoints.sm)
      padding 40px 0
    +above($breakpoints.md)
      padding 70px 0
    +above($breakpoints.xxl)
      padding 110px 0

  &__title
    text-align: center
    padding 0 0 15px 0
    +above($breakpoints.sm)
      text-align: start
      padding 0 0 30px 0
    +above($breakpoints.md)
      padding 0 0 40px 0
    +above($breakpoints.xxl)
      padding 0 0 66px 0

  &__cards-wrapper
    overflow hidden
    width 100%
    border-radius: 10px
    padding: 20px 0 1px
    background: linear-gradient(180.00deg, rgb(50, 47, 44),rgb(79, 75, 72) 193.571%)
    +above($breakpoints.sm)
      border-radius: 15px
      padding 30px
    +above($breakpoints.md)
      border-radius: 20px
      padding 40px 50px
    +above($breakpoints.xxl)
      height: 360px
      padding 41px 81px

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-wrap: wrap
      gap: 20px 0
    +above($breakpoints.md)
      gap: 30px 0
    +above($breakpoints.xxl)
      gap: 50px 0

  &__card
    position relative
    z-index 1
    width 280px !important
    padding-top 15px
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      width max-content !important
      padding-top 20px
    +above($breakpoints.md)
      padding-top 30px
    +above($breakpoints.xxl)
      padding-top 38px
    &--col-1,
    &--col-5
      +above($breakpoints.sm)
        width: 110px !important;
        margin-right: 50px;
      +above($breakpoints.md)
        width 150px !important
        margin-right 50px
      +above($breakpoints.xxl)
        width 127px !important
        margin-right 129px
    &--col-2,
    &--col-6
      +above($breakpoints.sm)
        width: 175px !important;
        margin-right: 40px;
      +above($breakpoints.md)
        width 250px !important
        margin-right 50px
      +above($breakpoints.xxl)
        width 253px !important
        margin-right 89px
    &--col-3,
    &--col-7
      +above($breakpoints.sm)
        width: 125px !important;
        margin-right: 50px;
      +above($breakpoints.md)
        width 180px !important
        margin-right 50px
      +above($breakpoints.xxl)
        width 168px !important
        margin-right 110px
    &--col-1,
    &--col-2,
    &--col-3
      position relative
      z-index 1
      &:after
        content: ""
        position: absolute
        +above($breakpoints.sm)
          z-index -1
          background-color rgba(87, 83, 79, 0.5)
          top: 0
          width 1px
          height: 158px
        +above($breakpoints.md)
          height: 215px
        +above($breakpoints.xxl)
          height: 278px
    &--col-1
      &:after
        +above($breakpoints.sm)
          right: -24px
        +above($breakpoints.md)
          right: -9px
        +above($breakpoints.xxl)
          right: -74px
    &--col-2
      &:after
        +above($breakpoints.sm)
          right: -13px
        +above($breakpoints.md)
          right: -9px
        +above($breakpoints.xxl)
          right: -32px
    &--col-3
      &:after
        +above($breakpoints.sm)
          right: -24px
        +above($breakpoints.md)
          right: -9px
        +above($breakpoints.xxl)
          right: -54px

  &__card-icon
    position: absolute
    z-index -1
    width: 90px;
    height: auto;
    top: -38px;
    left: 99px;
    +above($breakpoints.sm)
      width: 90px;
      top: -34px;
      left: -34px;
    +above($breakpoints.md)
      width: 130px;
      top: -50px;
      left: -48px;
    +above($breakpoints.xxl)
      width 138px
      top: -50px;
      left: -50px;

  &__bottom
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 15px
    text-align: center
    margin-top 20px
    +above($breakpoints.sm)
      text-align: start
      flex-direction: row
      align-items: flex-end
      gap: 50px
      margin-top 30px
    +above($breakpoints.md)
      gap: 106px
      margin-top 40px
    +above($breakpoints.xxl)
      gap: 173px
      margin-top 62px

  &__btn
    width 280px !important
    +above($breakpoints.sm)
      width 295px !important
    +above($breakpoints.md)
      width 340px !important
    +above($breakpoints.xxl)
      width 380px !important

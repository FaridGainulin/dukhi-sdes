.city-section
  background-image: url('../images/city-section-bg.jpg')
  background-repeat: no-repeat
  background-size: cover
  background-position: center
  background-color #4A3D34

  &__container
    position relative
    z-index 1
    padding 20px 0 0
    +above($breakpoints.sm)
      padding 40px 0 0
    +above($breakpoints.md)
      padding 60px 0 0
    +above($breakpoints.xxl)
      padding 110px 0 0

  &__icon
    position: absolute
    z-index -1
    width: 407px;
    height: auto;
    bottom: 0px;
    right: -232px;
    +above($breakpoints.sm)
      width 404px
      right: -170px
    +above($breakpoints.md)
      width: 551px;
      right: -254px;
    +above($breakpoints.xxl)
      width 704px
      height: 546px
      right: -370px

  &__title,
  &__sub-title,
  &__text
    text-align: center

  &__sub-title
    padding 10px 0 15px
    +above($breakpoints.sm)
      padding 15px 0 20px
    +above($breakpoints.md)
      padding 20px 0 30px
    +above($breakpoints.xxl)
      padding 30px 0 40px

  &__text
    color: #fff

  &__form
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 7px
    margin-top 15px
    margin-bottom 25px
    +above($breakpoints.sm)
      margin-top 20px
      margin-bottom 40px
      flex-direction: row
      justify-content center
      gap: 10px
    +above($breakpoints.md)
      margin-top 30px
      margin-bottom 80px
      gap: 15px
    +above($breakpoints.xxl)
      margin-top 40px
      margin-bottom 127px
      gap: 20px
    & > *
      width 280px !important
      +above($breakpoints.sm)
        width 188px !important
      +above($breakpoints.md)
        width 230px !important
      +above($breakpoints.xxl)
        width 280px !important

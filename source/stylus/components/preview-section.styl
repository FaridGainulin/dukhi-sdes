.preview-section
  // background-image: url('../images/preview-section-bg.jpg')
  // background-repeat: no-repeat
  // background-position: center
  // background-size: cover
  background-color #2B2724

  &__container
    position relative
    padding 20px 0 1px
    +above($breakpoints.sm)
      padding 40px 0 60px 0
    +above($breakpoints.md)
      padding 80px 0 110px 0
    +above($breakpoints.xxl)
      padding 110px 0 158px

  &__title
    padding 0 0 15px 0
    text-align: center
    +above($breakpoints.sm)
      padding 0 0 30px 0
    +above($breakpoints.md)
      padding 0 0 50px 0
    +above($breakpoints.xxl)
      padding 0 0 70px 0

  &__cards
    +above($breakpoints.sm)
      display: flex
      justify-content center
      gap: 10px
    +above($breakpoints.md)
      gap: 16px
    +above($breakpoints.xxl)
      gap: 20px

  &__card
    display: flex
    flex-direction: column
    gap: 15px
    width 280px !important
    +above($breakpoints.sm)
      gap: 13px
      width 235px !important
    +above($breakpoints.md)
      gap: 16px
      width 308px !important
    +above($breakpoints.xxl)
      gap: 20px
      width 380px !important

  &__img
    width 100%
    height: auto
    border-radius: 10px
    +above($breakpoints.sm)
      border-radius: 15px
    +above($breakpoints.md)
      border-radius: 20px
